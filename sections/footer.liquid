{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_logo",
        "label": "Show Logo",
        "default": true
      },
      {
         "type": "url",
         "id": "logo_url",
         "label": "Logo Link"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Custom logo width (in pixels)",
        "default": "100"
      },
        {
        "type": "text",
        "id": "small_text",
        "label": "Subheading text"
        },
      {
        "type": "text",
        "id": "email_id",
        "label": "Email-id"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "Primary menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_two",
        "label": "Additional menu 1",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_three",
        "label": "Additional menu 2",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_four",
        "label": "Link of beside the Copyright",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "footer_newsletter_enable",
        "label": "Show newsletter signup",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "footer_social_icon",
        "label": "Show Social Icon",
        "default": true
      }
    ]
  }
{% endschema %}
